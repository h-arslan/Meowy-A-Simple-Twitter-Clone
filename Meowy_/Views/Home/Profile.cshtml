            <button>All Meows</button>
            <button>Just Your Meows</button>
            <button>ReMeows</button>
            <button>Likes</button>            
        </div>
        <!--post ends-->

        <!--post starts-->
        <div class="post">
            <div class="postImage">
                <img class="imageFeed" alt="Image" />
            </div>

            <div class="postBody">
                <div class="postHeader">

                    <div class="postUserInfo">
                        <h3>
