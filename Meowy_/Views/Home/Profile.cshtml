<body>

    <!--feed starts-->
    <div>
        <div class="feedHeader">
            <h2>Profile</h2>
        </div>

        <!--profile box starts-->
        <div class="profileBox">
            <form>
                <div class="profileScreen">
                    <img class="imageProfile" alt="Image"/>
                </div>
                <button class="editButton">Edit Profile</button>
            </form>
        </div>
        <!--profile box ends-->

        <!--post starts-->
